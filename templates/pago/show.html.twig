{% extends 'base.html.twig' %}

{% block title %}Pago{% endblock %}

{% block body %}
    <h1>Pago</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ pago.id }}</td>
            </tr>
            <tr>
                <th>Monto</th>
                <td>{{ pago.monto }}</td>
            </tr>
            <tr>
                <th>Boleta</th>
                <td>{{ pago.boleta }}</td>
            </tr>
            <tr>
                <th>Observacion</th>
                <td>{{ pago.observacion }}</td>
            </tr>
            <tr>
                <th>FechaPago</th>
                <td>{{ pago.fechaPago ? pago.fechaPago|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>HoraPago</th>
                <td>{{ pago.horaPago ? pago.horaPago|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>FechaRegistro</th>
                <td>{{ pago.fechaRegistro ? pago.fechaRegistro|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('pago_index') }}">back to list</a>

    <a href="{{ path('pago_edit', {'id': pago.id}) }}">edit</a>

    {{ include('pago/_delete_form.html.twig') }}
{% endblock %}
