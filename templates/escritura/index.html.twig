{% extends 'base.html.twig' %}

{% block title %}Escritura index{% endblock %}

{% block body %}
    <h1>Escritura index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for escritura in escrituras %}
            <tr>
                <td>{{ escritura.id }}</td>
                <td>{{ escritura.nombre }}</td>
                <td>
                    <a href="{{ path('escritura_show', {'id': escritura.id}) }}">show</a>
