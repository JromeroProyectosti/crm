{% extends 'base.html.twig' %}

{% block title %}Mee index{% endblock %}

{% block body %}
    <h1>Mee index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for mee in mees %}
            <tr>
                <td>{{ mee.id }}</td>
                <td>
                    <a href="{{ path('mee_show', {'id': mee.id}) }}">show</a>
                    <a href="{{ path('mee_edit', {'id': mee.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('mee_new') }}">Create new</a>
{% endblock %}
